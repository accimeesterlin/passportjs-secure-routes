{{#if message}}

    <p>Error: {{message}}</p>
{{/if}}


<form action="/signup" method="POST">
    <div>
        <label>Username:</label>
        <input type="text" name="username" /><br />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password" />
    </div>

    <div>
        <label>Age:</label>
        <input type="number" name="age" />
    </div>

    <div>
        <input type="submit" value="Submit" />
    </div>
</form>